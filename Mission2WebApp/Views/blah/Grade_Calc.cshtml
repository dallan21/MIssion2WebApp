@{
    ViewData["Title"] = "Grade Calculator";
}


@model Grade_CalcModel;

<!--Grade Calculator-->
<h3>Grade Calculator</h3>
<form method="post">
    <label>Assignments:</label>
    <input id="txtassignments" asp-for="assignment" />
    <br /><br />
    <label>Group Projects:</label>
    <input id="txtgroup" asp-for="group_project" />
    <br /><br />
    <label>Quizzes:</label>
    <input id="txtquiz" asp-for="quiz" />
    <br /><br />
    <label>Exams:</label>
    <input id="txtexam" asp-for="exam" />
    <br /><br />
    <label>INTEX:</label>
    <input id="txtintex" asp-for="intex" />
    <br /><br />
    <button type="submit" id="submit">Calculate Grade</button>
    <br />
    <br />
    <br />
    <div asp-validation-summary="All"></div>
</form>
